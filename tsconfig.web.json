{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.tsx",
    "src/preload/*.d.ts", 
    "src/services", 
    "src/main/database", 
    "src/shared/types.ts", 
    "src/main/services/loggerService.ts"  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "ignoreDeprecations": "5.0",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/renderer/src/*"],
      "@renderer/*": [
        "src/renderer/src/*"
      ],
      "@shared/*": ["./src/shared/*"],
    }
  }
}
